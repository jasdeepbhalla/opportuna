{
    "manifest_version": 3,
    "name": "Opportuna â€“ Opportunity Outreach Assistant",
    "version": "0.1.0",
    "description": "Scan conference and CFP pages, extract key details, and draft tailored outreach emails for reviewers, judges, and speakers.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "src/background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "src/popup.html",
      "default_title": "Generate outreach email with Opportuna"
    },
    "options_page": "src/options.html",
    "icons": {
      "16": "icons/icon_16.jpg",
      "48": "icons/icon_48.jpg",
      "128": "icons/icon_128.jpg"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "src/contentScript.js"
        ],
        "run_at": "document_idle"
      }
    ]
  }
  